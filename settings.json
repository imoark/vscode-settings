{
  "window.zoomLevel": 1,
  "files.eol": "\n",
  "files.autoSave": "onFocusChange",

  // Emmet
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    "typescript": "jsx",
    "typescriptreact": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.excludeLanguages": ["markdown"],

  "editor.formatOnSave": true,
  // These are an obsolete prettier settings
  // "prettier.eslintIntegration": false,
  // "prettier.stylelintIntegration": true,
  // Use eslint config as the rules for prettier

  "javascript.format.enable": false,
  "javascript.validate.enable": false,
  // New Lint Intergration
  "editor.codeActionsOnSave": {
    // For ESLint
    "source.fixAll.eslint": true,
    // For TSLint
    "source.fixAll.tslint": true,
    // For Stylelint
    "source.fixAll.stylelint": true
  },

  // TODO-Tree
  "todo-tree.tree.showScanModeButton": true,
  "todo-tree.filtering.excludeGlobs": ["**/node_modules/**"],
  "todo-tree.general.debug": true,
  "todo-tree.general.enableFileWatcher": true,

  // stylelint settings
  "stylelint.enable": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.associations": {},

  // html formatter
  // switch between vscode and prettier formatter, cause prettier is buggy
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
    // "editor.defaultFormatter": "vscode.html-language-features"
  },

  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe"
}
